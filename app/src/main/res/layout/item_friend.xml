<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:padding="16dp">

    <View
        android:id="@+id/online_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/online_indicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#4A2C17"
            android:shadowColor="#F5E6D3"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/online_indicator"
        app:layout_constraintEnd_toStartOf="@+id/short_tox_id"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hamtaro" />

    <TextView
        android:id="@+id/friend_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/message_timestamp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/online_indicator"
        app:layout_constraintEnd_toStartOf="@+id/short_tox_id"
        app:layout_constraintTop_toBottomOf="@+id/friend_name"
        tools:text="Online n.n" />

    <TextView
        android:id="@+id/short_tox_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:textColor="#4A2C17"
            android:shadowColor="#F5E6D3"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="ABC123" />

</androidx.constraintlayout.widget.ConstraintLayout>
