<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ–¼ï¸ Contact Item Layout Optimizado para BaterÃ­a -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/item_background"
    android:gravity="center_vertical">

    <!-- ðŸ–¼ï¸ Avatar optimizado (96x96px mÃ¡ximo) -->
    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:background="@drawable/online_indicator"
        android:contentDescription="Avatar" />

    <!-- ðŸ“± InformaciÃ³n del contacto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- ðŸ‘¤ Nombre del contacto -->
        <TextView
            android:id="@+id/contactNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- ðŸ’¬ Mensaje de estado -->
        <TextView
            android:id="@+id/statusMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status message"
            android:textSize="14sp"
            android:textColor="@color/on_surface_variant"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp" />

        <!-- ðŸŸ¢ Estado de conexiÃ³n -->
        <TextView
            android:id="@+id/onlineStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En lÃ­nea"
            android:textSize="12sp"
            android:textColor="@color/accent_color"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- ðŸ”‹ InformaciÃ³n optimizada para baterÃ­a -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginStart="8dp">

        <!-- ðŸ• Hora del Ãºltimo mensaje -->
        <TextView
            android:id="@+id/lastMessageTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30"
            android:textSize="12sp"
            android:textColor="@color/on_surface_variant" />

        <!-- ðŸ”” Contador de mensajes no leÃ­dos -->
        <TextView
            android:id="@+id/unreadCountTextView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="3"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/online_indicator"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- â­ Indicador de favorito -->
        <ImageView
            android:id="@+id/favoriteIndicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:contentDescription="Favorite" />

        <!-- ðŸŽ¤ Indicador de audio -->
        <ImageView
            android:id="@+id/audioIndicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:contentDescription="Audio message" />

    </LinearLayout>

</LinearLayout>
