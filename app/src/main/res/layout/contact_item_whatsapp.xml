<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:attr/selectableItemBackground"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <!-- Avatar Circle -->
    <ImageView
        android:id="@+id/avatar_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:background="@drawable/online_indicator"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Contact Name -->
    <TextView
        android:id="@+id/contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Carlos Rodríguez"
        android:textColor="#4A2C17"
        android:shadowColor="#F5E6D3"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/avatar_image"
        app:layout_constraintEnd_toStartOf="@+id/time_stamp"
        app:layout_constraintTop_toTopOf="@+id/avatar_image"
        app:layout_constraintBottom_toTopOf="@+id/last_message" />

    <!-- Last Message -->
    <TextView
        android:id="@+id/last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Hola, ¿cómo estás?"
        android:textColor="#6B4423"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/avatar_image"
        app:layout_constraintEnd_toStartOf="@+id/message_count"
        app:layout_constraintTop_toBottomOf="@+id/contact_name"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_image" />

    <!-- Time Stamp -->
    <TextView
        android:id="@+id/time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 AM"
        android:textColor="#6B4423"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contact_name" />

    <!-- Message Count Badge -->
    <TextView
        android:id="@+id/message_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/online_indicator"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/last_message" />

</androidx.constraintlayout.widget.ConstraintLayout>
