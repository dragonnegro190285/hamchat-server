<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Idioma -->
        <TextView
            android:id="@+id/language_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textColor="@color/on_surface_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/language_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EspaÃ±ol"
                android:textColor="@color/on_surface_dark"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_german"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deutsch"
                android:textColor="@color/on_surface_dark"
                android:textSize="14sp" />

        </RadioGroup>

        <!-- Tema -->
        <TextView
            android:id="@+id/theme_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/theme"
            android:textColor="@color/on_surface_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/theme_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dark_theme"
                android:textColor="@color/on_surface_dark"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/radio_hamtaro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hamtaro_theme"
                android:textColor="@color/on_surface_dark"
                android:textSize="14sp" />

        </RadioGroup>

        <!-- Ahorro de BaterÃ­a -->
        <TextView
            android:id="@+id/battery_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ðŸ”‹ Ahorro de BaterÃ­a"
            android:textColor="@color/on_surface_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inactivity_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Cerrar por inactividad:"
            android:textColor="@color/on_surface_dark"
            android:textSize="12sp" />

        <RadioGroup
            android:id="@+id/inactivity_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_3min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3m"
                android:textColor="@color/on_surface_dark"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio_5min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m"
                android:textColor="@color/on_surface_dark"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio_10min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10m"
                android:textColor="@color/on_surface_dark"
                android:textSize="12sp" />

        </RadioGroup>

        <!-- SecciÃ³n de Datos -->
        <TextView
            android:id="@+id/data_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ðŸ—„ï¸ Datos"
            android:textColor="@color/on_surface_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/db_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Usuarios: 0 | Mensajes: 0"
            android:textColor="@color/message_timestamp"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_clear_database"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FF5722"
            android:text="ðŸ—‘ï¸ Limpiar BD"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <!-- VersiÃ³n -->
        <TextView
            android:id="@+id/version_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Ham-Chat v1.0\nSharp Keitai 4"
            android:textColor="@color/message_timestamp"
            android:textSize="10sp" />

    </LinearLayout>

</ScrollView>
