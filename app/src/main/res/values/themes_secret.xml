    <!-- ðŸŽ¨ Estilos de componentes secretos -->
    
    <!-- ðŸ¹ Botones estilo Hamtaro -->
    <style name="Widget.HamChat.Button.Hamtaro" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/hamtaro_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:padding">16dp</item>
