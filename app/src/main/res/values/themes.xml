<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HamChat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark_variant</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
    </style>
    
    <style name="Theme.HamChat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.HamChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <style name="Theme.HamChat.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    
    <!-- Hamtaro Theme -->
    <style name="Theme.HamChat.Hamtaro">
        <item name="colorPrimary">@color/hamtaro_orange</item>
        <item name="colorPrimaryVariant">@color/hamtaro_orange_light</item>
        <item name="colorOnPrimary">@color/hamtaro_black</item>
        <item name="colorSecondary">@color/hamtaro_cream</item>
        <item name="colorSecondaryVariant">@color/hamtaro_cream</item>
        <item name="colorOnSecondary">@color/hamtaro_black</item>
        <item name="android:windowBackground">@color/hamtaro_cream</item>
        <item name="colorSurface">@color/hamtaro_cream</item>
        <item name="colorOnSurface">@color/hamtaro_black</item>
        <item name="colorOnBackground">@color/hamtaro_black</item>
        <item name="android:statusBarColor">@color/hamtaro_orange</item>
    </style>
    
    <!-- Game Theme -->
    <style name="Theme.HamChat.Game">
        <item name="android:windowBackground">@color/game_background</item>
        <item name="colorPrimary">@color/game_background</item>
        <item name="colorOnPrimary">@color/hamtaro_black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
