<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- ðŸŽ¨ Estado Presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E68500" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#CC7300" />
        </shape>
    </item>
    
    <!-- ðŸŽ¨ Estado Enfocado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9500" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#FFB84D" />
        </shape>
    </item>
    
    <!-- ðŸŽ¨ Estado Normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9500" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#FFAA33" />
        </shape>
    </item>
    
</selector>
